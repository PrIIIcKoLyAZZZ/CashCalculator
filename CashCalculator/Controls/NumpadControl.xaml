<UserControl x:Class="CashCalculator.Controls.NumpadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Visibility="Collapsed">
  <Border CornerRadius="10"
          Padding="14"
          Background="{StaticResource WindowBackgroundBrush}"
          BorderBrush="{StaticResource DataGridBorderBrush}"
          BorderThickness="1">
    <Border.Effect>
      <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.35"/>
    </Border.Effect>
    <StackPanel>
      <!-- Display -->
      <Border Background="{StaticResource DataGridAlternationRowBackgroundBrush}"
              CornerRadius="8"
              Padding="8"
              Margin="0 0 0 14">
        <TextBlock x:Name="Display"
                   FontSize="30"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
      </Border>
      <!-- Numpad Buttons -->
      <UniformGrid Columns="3" Rows="4" HorizontalAlignment="Center">
        <Button Content="1" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="2" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="3" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="4" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="5" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="6" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="7" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="8" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="9" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="⌫" Click="OnBackspaceClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="0" Click="OnDigitClick" Style="{StaticResource NumpadButton}"/>
        <Button Content="✓" Click="OnEnterClick" Style="{StaticResource NumpadButton}"/>
      </UniformGrid>
    </StackPanel>
  </Border>
</UserControl>