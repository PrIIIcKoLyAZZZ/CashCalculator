<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Тёмная тема: фон окна тёмно-серый, текст — почти белый -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="#FFE5E5E5"/>

    <!-- Таблица: строки чуть светлее фона, чередование чуть темнее -->
    <SolidColorBrush x:Key="DataGridRowBackgroundBrush" Color="#FF3E3E42"/>
    <SolidColorBrush x:Key="DataGridAlternationRowBackgroundBrush" Color="#FF343437"/>
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="#FF555555"/>

    <!-- Акцент для кнопки -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF569CD6"/>
</ResourceDictionary>